<%-include("navbar.ejs")%>


<div class="container card card-body">
    <div class="row">
        <div class="col-md-12">
            <h4>Category List</h4>
        </div>
        <div class="col-md-12">
           <table class="table">
            <tr>
                <th>Action</th>
                <th>SrNo</th>
                <th>Category&nbsp;Name</th>
                <th>Category Details</th>
            </tr>
            <% cats.map((row,i)=>{%>
              <tr>
                <td style="white-space:nowrap;">
                    <a href="/admin/edit_category/<%-row.category_id%>">
                       <button class="btn btn-primary btn-sm"><i class="fa-solid fa-pen-to-square"></i></i></button> 
                    </a>
                    <a href="/admin/delete_category/<%-row.category_id%>" onclick="return confirm('Are You Sure..?')">
                        <button class="btn btn-danger btn-sm"><i class="fa-solid fa-trash"></i></button>
                    </a>
                </td>
                <td><%-i+1%></td>
                <td><%-row.category_name%></td>
                <td><%-row.category_details%></td>
              </tr>
           <%})%>
           </table>
        </div>
        
        </div>
        </div>
        
<%-include("footer.ejs")%>
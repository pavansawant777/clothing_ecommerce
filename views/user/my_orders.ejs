<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order History</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container my-5">
        <!-- Header -->
        <div class="mb-4">
            <h1 class="h1" style="text-align: center;">Order History</h1>
            <!-- <button class="btn btn-primary">Back to Shop</button> -->
        </div>

        <!-- Order Table -->
        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <thead class="table-dark">
                    <tr>
                        <th></th>
                        <th>Order ID</th>
                        <th>Order Date</th>
                        <th>Payment Status</th>
                        <th>Order Amount</th>
                        <th>Order Status</th>
                    </tr>
                </thead>
                <tbody>
                    
                    <%orders.map((row,i)=>{ %>
                  
                    <tr>
                        <td>
                          <a href="/print_invoice/<%-row.order_id%>"><button>Print Invoice</button></a>  
                        </td>
                        <td>#<%-row.order_id %></td>
                        <td><%-row.order_date%></td>
                        <td style="text-transform: capitalize;"><%-row.payment_status%></td>
                        <td>&#8377; <%-row.total %></td>
                        <td  style="text-transform: capitalize;"><span class="badge bg-success"><%-row.order_status%></span></td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

